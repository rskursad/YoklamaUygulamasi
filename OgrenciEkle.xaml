<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yoklamaVsty.OgrenciEkle"
             Title="OgrenciEkle" BackgroundImageSource="wallpaper.jpg">
    <ContentPage.Content>
        <Grid VerticalOptions="CenterAndExpand" Padding="20">

            <!-- Form Kutusu -->
            <Frame BackgroundColor="#243447" 
CornerRadius="15"
   Padding="25"
   HasShadow="True"
   HorizontalOptions="Center"
   VerticalOptions="Center"
   WidthRequest="320">

                <StackLayout Spacing="20" HorizontalOptions="FillAndExpand">


                    <Frame BackgroundColor="Transparent" WidthRequest="250" BorderColor="#FFAA33" HorizontalOptions="CenterAndExpand" Margin="0,0,0,0" Padding="0,10,0,10">
                        <Label Text="ÖĞRENCİ EKLE" FontAttributes="Bold"  FontFamily="Arial" HorizontalOptions="Center" HorizontalTextAlignment="Center" BackgroundColor="Transparent"></Label>
                    </Frame>



                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="user_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="AD" 
                    PlaceholderColor="#A0A0A0" 
                     TextColor="#243447" 
                     FontSize="16"
                    x:Name="txtAd"
                     WidthRequest="200"
                    BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="user_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="SOYAD"  
                PlaceholderColor="#A0A0A0" 
                 TextColor="#243447" 
                FontSize="16"
                 x:Name="txtSoyad"
                   WidthRequest="200"
                 BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>


                    <Button Text="ÖĞRENCİ EKLE" 
            BackgroundColor="#FFAA33"
        TextColor="Black" 
            FontSize="16" 
                        Clicked="btnTalebeEkle_Clicked"
            HeightRequest="45"
             FontFamily="Arial"
            CornerRadius="8"
            FontAttributes="Bold"
            Margin="0,0,0,0"/>


                    <Frame BackgroundColor="Transparent" BorderColor="#FFAA33" Padding="0,0,0,0">
                        <Button BackgroundColor="Transparent" 
                        Margin="0,0,0,0" 
                        Padding="0,0,0,0" 
                        TextColor="#FFAA33" 
                        Clicked="btnGeri_Clicked"
                        Text="GERİ">

                        </Button>
                    </Frame>
                </StackLayout>

            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>