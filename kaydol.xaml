<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yoklamaVsty.kaydol"
             Title="kaydol"         BackgroundImageSource="wallpaper.jpg">
    <ContentPage.Content>
               
            <Grid VerticalOptions="CenterAndExpand" Padding="20">

            <!-- Form Kutusu -->
            <Frame BackgroundColor="#243447" 
        CornerRadius="15"
           Padding="25"
           HasShadow="True"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           WidthRequest="320">
                <ScrollView  Orientation="Vertical" MaximumHeightRequest="600">
                    <StackLayout Spacing="20" HorizontalOptions="FillAndExpand">


                    <Frame BackgroundColor="Transparent" WidthRequest="250" BorderColor="Transparent" HorizontalOptions="CenterAndExpand" Margin="0,0,0,0" Padding="0,0,0,0">
                        <Label Text="ÖĞRENCİ YOKLAMA SİSTEMİ" FontAttributes="Bold"  FontFamily="Arial" HorizontalOptions="Center" HorizontalTextAlignment="Center" BackgroundColor="Transparent"></Label>
                    </Frame>

                    <StackLayout HorizontalOptions="CenterAndExpand" Padding="10" Margin="0,0,0,0" VerticalOptions="CenterAndExpand">

                        <Frame BackgroundColor="#1A2A3A" Padding="0,0,0,0"
                       WidthRequest="70" 
                       HeightRequest="70"
                       CornerRadius="35"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="CenterAndExpand">
                            <Image Source="user_icon.png" 
                           Margin="0,0,0,0"
                           WidthRequest="40" 
                           HeightRequest="40"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"/>
                        </Frame>

                    </StackLayout>
                   
                        <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="user_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="Ad" 
       PlaceholderColor="#A0A0A0" 
       TextColor="#243447" 
       FontSize="16"
                            x:Name="txtAd"
       WidthRequest="200"
       BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="user_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="Soyad" 
                        PlaceholderColor="#A0A0A0" 
                         TextColor="#243447" 
                        FontSize="16"
                         x:Name="txtSoyad"
                           WidthRequest="200"
                         BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>


                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="user_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="Kullanıcı Adı" 
                           PlaceholderColor="#A0A0A0" 
                           TextColor="#243447" 
                           FontSize="16"
                           x:Name="txtKullaniciAdi"
                           WidthRequest="200"
                           BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>


                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="lock_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="Şifre" 
                           PlaceholderColor="#A0A0A0" 
                           TextColor="#243447" 
                           WidthRequest="200"
                                   x:Name="txtSifre"
                           IsPassword="True" 
                           FontSize="16"
                           BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image Source="lock_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                            <Entry Placeholder="Şifre Kurtarma Sorusu" 
       PlaceholderColor="#A0A0A0" 
       TextColor="#243447" 
       WidthRequest="200" 
                                   x:Name="txtSifreKurtarmaSorusu"
       FontSize="16"
       BackgroundColor="Transparent" />
                        </StackLayout>
                    </Frame>
                        <Frame BackgroundColor="White" CornerRadius="8" Padding="10" HasShadow="False">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="lock_icon.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                                <Entry Placeholder="Cevap" 
PlaceholderColor="#A0A0A0" 
TextColor="#243447" 
                                       x:Name="txtCevap"
WidthRequest="200" 
FontSize="16"
BackgroundColor="Transparent" />
                            </StackLayout>
                        </Frame>



                        <Button Text="KAYDOL" 
                        Clicked="btnKaydol_Clicked"
                    BackgroundColor="#FFAA33"
                TextColor="White" 
                    FontSize="16" 
                    HeightRequest="45"
                     FontFamily="Arial"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Margin="0,0,0,0"/>


                    
                </StackLayout>
                </ScrollView>
            </Frame>
        </Grid>
       

    </ContentPage.Content>
</ContentPage>